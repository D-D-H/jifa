<Configuration status="WARN">
    <properties>
        <property name="LOG_HOME">jifa-logs</property>
        <property name="PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %-30.30c{1.} - %msg%n</property>
    </properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${PATTERN}" />
        </Console>
        <RollingFile name="ControllerLog" fileName="${sys:user.home}/${LOG_HOME}/contorller.log"
                     filePattern="${sys:user.home}/${LOG_HOME}/$${date:yyyy-MM}/${FILE_NAME}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${PATTERN}" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="7" modulate="true" />
                <SizeBasedTriggeringPolicy size="100MB" />
            </Policies>
            <DefaultRolloverStrategy max="5" compressionLevel="1">
                <Delete basePath="${sys:user.home}/${LOG_HOME}" maxDepth="2">
                    <IfFileName glob="*/*.log.gz" />
                    <IfLastModified age="14D" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
        <RollingFile name="ServiceLog" fileName="${sys:user.home}/${LOG_HOME}/service.log"
                     filePattern="${sys:user.home}/${LOG_HOME}/$${date:yyyy-MM}/${FILE_NAME}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${PATTERN}" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="7" modulate="true" />
                <SizeBasedTriggeringPolicy size="100MB" />
            </Policies>
            <DefaultRolloverStrategy max="5" compressionLevel="1">
                <Delete basePath="${sys:user.home}/${LOG_HOME}" maxDepth="2">
                    <IfFileName glob="*/*.log.gz" />
                    <IfLastModified age="14D" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
        <RollingFile name="AnalysisLog" fileName="${sys:user.home}/${LOG_HOME}/analysis.log"
                     filePattern="${sys:user.home}/${LOG_HOME}/$${date:yyyy-MM}/${FILE_NAME}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern= "${PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="7" modulate="true" />
                <SizeBasedTriggeringPolicy size="100MB" />
            </Policies>
            <DefaultRolloverStrategy max="5" compressionLevel="1">
                <Delete basePath="${sys:user.home}/${LOG_HOME}" maxDepth="2">
                    <IfFileName glob="*/*.log.gz" />
                    <IfLastModified age="14D" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
        <RollingFile name="Stdout" fileName="${sys:user.home}/${LOG_HOME}/stdout.log"
                     filePattern="${sys:user.home}/${LOG_HOME}/$${date:yyyy-MM}/${FILE_NAME}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern= "${PATTERN}"/>
            <Filters>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy interval="7" modulate="true" />
                <SizeBasedTriggeringPolicy size="100MB" />
            </Policies>
            <DefaultRolloverStrategy max="5" compressionLevel="1">
                <Delete basePath="${sys:user.home}/${LOG_HOME}" maxDepth="2">
                    <IfFileName glob="*/*.log.gz" />
                    <IfLastModified age="14D" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
        <RollingFile name="Stderr" fileName="${sys:user.home}/${LOG_HOME}/stderr.log"
                     filePattern="${sys:user.home}/${LOG_HOME}/$${date:yyyy-MM}/${FILE_NAME}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern= "${PATTERN}"/>
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy interval="7" modulate="true" />
                <SizeBasedTriggeringPolicy size="100MB" />
            </Policies>
            <DefaultRolloverStrategy max="5" compressionLevel="1">
                <Delete basePath="${sys:user.home}/${LOG_HOME}" maxDepth="2">
                    <IfFileName glob="*/*.log.gz" />
                    <IfLastModified age="14D" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="org.eclipse.jifa.server.controller" level="INFO" additivity="false">
            <AppenderRef ref="ControllerLog" />
        </Logger>
        <Logger name="org.eclipse.jifa.server.service" level="INFO" additivity="false">
            <AppenderRef ref="ServiceLog" />
        </Logger>
        <Logger name="org.eclipse.jifa.analysis" level="INFO" additivity="false">
            <AppenderRef ref="AnalysisLog" />
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="Console" />
            <AppenderRef ref="Stdout" />
            <AppenderRef ref="Stderr" />
        </Root>
    </Loggers>
</Configuration>
